{
	"name": "Existing Dockerfile",
	"build": {
		"context": "..",
		"dockerfile": "../.devcontainer/Dockerfile",
		"args": {
			"USERNAME": "${localEnv:USER}"
		}
	},
	"mounts": [
		"source=${localEnv:HOME}/.config/gh/hosts.yml,target=${localEnv:HOME}/.config/gh/hosts.yml,type=bind,consistency=cached,ro=true", // Enables use of GitHub CLI
		"source=${localEnv:HOME}/.bashrc,target=${localEnv:HOME}/.bashrc,type=bind,consistency=cached,ro=true" // Bash profile settings
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"James-Yu.latex-workshop"
			],
			"settings": {
				"latex-workshop.docker.enabled": false, // Disables Docker within devcontainer (which is already running in Docker)
			}
		}
	},
}

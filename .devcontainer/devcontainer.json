{
	"name": "Existing Dockerfile",
	"build": {
		"context": "..",
		"dockerfile": "../.devcontainer/Dockerfile",
		"args": {
			"USERNAME": "${localEnv:USER}"
		}
	},
	"mounts": [
		"source=${localEnv:HOME}/.config/gh/hosts.yml,target=${localEnv:HOME}/.config/gh/hosts.yml,type=bind,consistency=cached,ro=true",
		"source=${localEnv:HOME}/.bashrc,target=${localEnv:HOME}/.bashrc,type=bind,consistency=cached,ro=true"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"James-Yu.latex-workshop"
			]
		}
	},
}

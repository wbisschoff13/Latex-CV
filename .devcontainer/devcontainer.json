{
	"name": "Existing Dockerfile",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	"mounts": [
		"source=${localEnv:HOME}/.config/gh/hosts.yml,target=/root/.config/gh/hosts.yml,type=bind,consistency=cached,ro=true",
		"source=${localEnv:HOME}/.bashrc,target=/root/.bashrc,type=bind,consistency=cached,ro=true"
	],
	"postCreateCommand": "./.devcontainer/postCreateCommand.sh",
	"postStartCommand": ". ~/.bashrc",
	"customizations": {
		"vscode": {
			"extensions": [
				"James-Yu.latex-workshop"
			]
		}
	},
}

{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "latexmk -pdfxe -aux-directory=build *.tex",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "continuous build",
            "type": "shell",
            "command": "latexmk -pdfxe -pvc -aux-directory=build *.tex",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "full clean",
            "type": "shell",
            "command": "latexmk -C",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
    ]
}
